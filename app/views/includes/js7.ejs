    <script type="text/javascript">
	
      google.setOnLoadCallback(drawDefaultChart7("T° last 7 Days","/T/7","chartT7","T°","Max°","Min°","T1"));
      google.setOnLoadCallback(drawDefaultChart7("Pressure last 7 Days","/PRESS/7","chartPRESS7","P mBar","Max mBar","Min mBar","PRESS"));
      google.setOnLoadCallback(drawDefaultChart7("Humidity last 7 Days","/H/7","chartH7","H%","Max%","Min%","H1"));
      google.setOnLoadCallback(drawDefaultChart7("Windchill last 7 Days","/WC/7","chartWC7","W°","Max°","Min°","WC"));
      google.setOnLoadCallback(drawDefaultChart7("Rain last 7 Days","/RC/7","chartRC7","Rmm°","Max mm","Min mm","RC"));


      function drawDefaultChart7(title,_url,_el,leg1,leg2,leg3,field) {

	var options = {chart: {"title":title}, animation : {startup:true}};

	 $.ajax({
          url: _url,
          dataType: "JSON"
        }).done(function(data) {

		var dataTable = new google.visualization.DataTable();
		dataTable.addColumn('datetime','time');
		dataTable.addColumn('number',leg1);
		dataTable.addColumn('number',leg2);
		dataTable.addColumn('number',leg3);


	    $.each(data, function (i, row) {
		    dataTable.addRow([
		      (new Date(row.ts)),
		      parseFloat(row[field]),
		      parseFloat(row.max),
		      parseFloat(row.min)
		    ]);
		  });

		var chart = new google.charts.Line(document.getElementById(_el));
		chart.draw(dataTable, options);
	});
  
      };


    </script>

